@{
    ViewData["Title"] = "National Treasury Skills Audit System";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .text-center{
        margin-bottom: 30px;
    }
    .hero-section-gov {
        
        padding: 4rem 1rem;
        text-align: center;
        margin-top: -1.5rem;
    }

    .hero-content {
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .hero-section-gov .gov-logo {
        content: url('/images/coat_of_arms_knobkierie.jpg');
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 100px;
        height: auto;
        margin-bottom: 1.5rem;
        opacity: 0.9;
    }

    .hero-section-gov h1 {
        font-size: 2.5rem;
        font-weight: 600;
        color: #0F6F84;
        margin-bottom: 0.5rem;
    }

    .hero-section-gov .sub-headline {
        font-size: 1.2rem;
        color: #495057;
        margin-bottom: 1.5rem;
    }

    .hero-section-gov p.lead {
        font-size: 1rem;
        color: #6c757d;
        margin-bottom: 2rem;
    }

    .btn-login-gov {
        background-color: #0F6F84;
        border-color: #0F6F84;
        color: white;
        font-weight: 500;
        padding: 0.6rem 1.8rem;
        border-radius: 0.3rem;
        font-size: 1rem;
        transition: background-color 0.2s ease;
    }

        .btn-login-gov:hover {
            background-color: #0B5B6D;
            border-color: #0B5B6D;
            color: white;
        }

    .features-section-gov {
        padding: 4rem 1rem;
        background-color: #ffffff;
    }

        .features-section-gov h2 {
            color: #343a40;
            font-weight: 600;
            margin-bottom: 3rem;
            text-align: center;
        }

    .feature-item-gov {
        background-color: #ffffff;
        padding: 2rem 1.5rem;
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        height: 100%;
        transition: box-shadow 0.3s ease, transform 0.3s ease;
        text-align: center;
    }

        .feature-item-gov:hover {
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.08) !important;
            transform: translateY(-5px);
        }

    .feature-icon-gov {
        font-size: 2.5rem;
        color: #0F6F84;
        margin-bottom: 1rem;
        display: inline-block;
    }

    .feature-title-gov {
        font-weight: 600;
        color: #212529;
        font-size: 1.1rem;
        margin-bottom: 0.75rem;
    }

    .feature-description-gov {
        font-size: 0.9rem;
        color: #6c757d;
        line-height: 1.6;
    }

    /* footer { background-color: #e9ecef !important; } */

</style>

<div class="landing-page-content">
    <section class="hero-section-gov text-center">
        <div class="hero-content">
            <img src="~/images/coat_of_arms_knobkierie.jpg" alt="National Treasury - CapableZA" class="gov-logo">
            <h1 class="display-5">National Treasury</h1>
            <p class="sub-headline">Skills Audit System</p>
            <p class="lead mx-auto" style="max-width: 600px;">
                Authorised personnel access point for managing skills, qualifications, and monitoring training progress within the National Treasury.
            </p>
            <a asp-controller="Account" asp-action="Login" class="btn btn-login-gov shadow-sm">
                Login
            </a>
        </div>
    </section>

    <section class="features-section-gov bg-white">
        <h4 class="text-center">System Capabilities</h4>
        <div class="row g-4">
            <div class="col-lg-4 d-flex align-items-stretch">
                <div class="feature-item-gov text-center shadow-sm">
                    <div class="feature-icon-gov"> <i class="fa fa-lightbulb"></i> </div>
                    <h3 class="feature-title-gov">Skills Management</h3>
                    <p class="feature-description-gov">Maintain an accurate and up-to-date record of employee skills and proficiency levels for effective resource allocation and development planning.</p>
                </div>
            </div>
            <div class="col-lg-4 d-flex align-items-stretch">
                <div class="feature-item-gov text-center shadow-sm">
                    <div class="feature-icon-gov"> <i class="fa fa-award"></i> </div>
                    <h3 class="feature-title-gov">Qualification Verification</h3>
                    <p class="feature-description-gov">Streamline the process of submitting, reviewing, and verifying employee qualifications, ensuring compliance and record accuracy.</p>
                </div>
            </div>
            <div class="col-lg-4 d-flex align-items-stretch">
                <div class="feature-item-gov text-center shadow-sm">
                    <div class="feature-icon-gov"> <i class="fa fa-tasks"></i> </div>
                    <h3 class="feature-title-gov">Training Administration</h3>
                    <p class="feature-description-gov">Assign, track, and manage employee training activities. Employees can submit completed training for official record-keeping.</p>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {}