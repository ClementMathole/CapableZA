@model Capableza.Web.Models.Qualification
@{
    ViewData["Title"] = "Qualification Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string employeeName = ViewBag.EmployeeName as string ?? "Employee";
    string employeeId = ViewBag.EmployeeId as string ?? "";
}

<style>
    .rounded-pill{
        border: 2px solid grey;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-3 pt-1 pb-2 border-bottom">
    <div>
        <h1 class="h2">@ViewData["Title"]</h1>
        <br />
        <h4>@ViewBag.EmployeeName</h4>
    </div>
    <a asp-action="EmployeeDetails" asp-route-id="@employeeId" class="btn btn-sm btn-outline-secondary">
        <i class="fa fa-arrow-left me-1"></i> Back to Employee
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header py-3">
        <h5 class="mb-0 card-title">@Model.Title</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Title:</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Institute:</dt>
            <dd class="col-sm-9">@Model.Institute</dd>

            <dt class="col-sm-3">Year Obtained:</dt>
            <dd class="col-sm-9">@Model.YearObtained</dd>

            <dt class="col-sm-3">Type:</dt>
            <dd class="col-sm-9">@Model.Type</dd>

            <dt class="col-sm-3">Serial Number:</dt>
            <dd class="col-sm-9">@Model.SerialNumber</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9"><span class="badge @(Model.Status == "Verified" ? "bg-success" : (Model.Status == "Rejected" ? "bg-danger" : "bg-warning text-dark")) rounded-pill">@Model.Status</span></dd>

            @if (!string.IsNullOrEmpty(Model.DocumentUrl))
            {
                <dt class="col-sm-3">Document:</dt>
                <dd class="col-sm-9">
                    <a href="@Url.Action("ViewQualificationDocument", "Admin", new { employeeId = Model.EmployeeId, qualificationId = Model.Id })"
                       target="_blank"
                       class="btn btn-soft-primary btn-sm rounded-pill">
                        <i class="fa fa-paperclip me-1"></i> View Document
                    </a>
                </dd>
            }
        </dl>
    </div>
</div>