@model Capableza.Web.Models.EmployeeProfile
@{
    Layout = null;
    ViewData["Title"] = "My Profile";
    bool isAdminViewing = ViewBag.IsAdminViewing ?? false;
    string progressColorClass = Model.ProfileCompletionStatus >= 100 ? "bg-success"
                               : (Model.ProfileCompletionStatus >= 50 ? "bg-primary-teal" : "bg-warning");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Capableza</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .profile-card {
            border-radius: 0.75rem;
            border: 1px solid #dee2e6;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.075);
        }

        .profile-header {
            font-weight: 600;
            font-size: 1.2rem;
            color: #343a40;
        }

        .progress {
            height: 10px;
            background-color: #e9ecef;
            border-radius: 5px;
        }

        .progress-bar {
            background-color: #0F6F84;
        }

        .completion-label {
            font-size: 0.8rem;
            color: #6c757d;
        }

        .form-label {
            font-size: 0.9rem;
            font-weight: 500;
            color: #495057;
            margin-bottom: 0.3rem;
        }

        .form-control, .form-select {
            font-size: 0.95rem;
            border-color: #ced4da;
            border-radius: 0.375rem;
        }

            .form-control:focus, .form-select:focus {
                border-color: #86b7fe; 
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            }

        .img-thumbnail {
            border-color: #dee2e6;
        }

        .btn-primary-teal {
            background-color: #0F6F84;
            border-color: #0F6F84;
            color: white;
            padding: 0.6rem 1.2rem;
            font-weight: 500;
        }

            .btn-primary-teal:hover {
                background-color: #0B5B6D;
                border-color: #0B5B6D;
            }

        .btn-outline-secondary {
            border-color: #ced4da;
            color: #6c757d;
            padding: 0.6rem 1.2rem;
            font-weight: 500;
        }

            .btn-outline-secondary:hover {
                background-color: #e9ecef;
            }

        .profile-picture-section .btn {
            font-size: 0.8rem;
            padding: 0.25rem 0.6rem;
        }
    </style>
</head>
<body>

    <div class="container mt-4 mb-5">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="mb-3">
            <a asp-action="Dashboard" class="btn btn-sm btn-link text-secondary text-decoration-none">
                <i class="fa fa-arrow-left me-1"></i> Back to Dashboard
            </a>
        </div>

        <form asp-action="Profile" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger mb-3 small"></div>

            <div class="card profile-card bg-white">
                <div class="card-body p-4">
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="IdNumber" class="form-label">South African ID Number</label>
                            <input asp-for="IdNumber" class="form-control" placeholder="e.g., 990101..." />
                            <span asp-validation-for="IdNumber" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="JobTitle" class="form-label">Role</label>
                            <select asp-for="JobTitle" class="form-select">
                                <option value="">-- Select Role --</option>
                                <option>Designer</option>
                                <option>Developer</option>
                                <option>Manager</option>
                                <option>Analyst</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="JobTitle" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4 profile-picture-section">
                        <label class="form-label">Profile Picture</label>
                        <div class="d-flex align-items-center">

                            <img id="profilePicPreview"
                                 src="@Url.Action("ViewProfilePicture", "Employee")"
                                 class="img-thumbnail me-3"
                                 style="width:80px;height:80px;object-fit:cover;" alt="Profile picture">

                            <div>
                                <input type="file"
                                       class="form-control form-control-sm mb-1"
                                       id="profilePictureFile"
                                       name="profilePictureFile"
                                       accept="image/png, image/jpeg, image/gif" />

                                <div class="form-text small mb-1">Max 2 MB. Applied on Save.</div>

                                @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                                {
                                    <button type="button"
                                            id="removeProfilePicBtn"
                                            class="btn btn-outline-danger btn-sm">
                                        Remove Picture
                                    </button>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row g-2 align-items-center">
                        <div class="col-md-6 d-grid">
                            <a asp-action="ChangePassword" class="btn btn-outline-secondary mb-2">Update Password</a>
                            <a asp-action="Dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
                        </div>
                        <div class="col-md-6 d-grid">
                            <button type="submit" class="btn btn-primary-teal">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(function () {
            const $fileInput = $('#profilePictureFile');
            const $preview    = $('#profilePicPreview');
            const $removeBtn  = $('#removeProfilePicBtn');
            const defaultSrc  = 'https://placehold.co/80x80/eee/ccc?text=No+Image';

            $fileInput.on('change', function (e) {
                const file = e.target.files[0];
                if (!file) { $preview.attr('src', originalSrc); return; }

                if (file.size > 2 * 1024 * 1024) {
                    alert('File too large – max 2 MB');
                    $(this).val('');
                    $preview.attr('src', originalSrc);
                    return;
                }

                const reader = new FileReader();
                reader.onload = ev => $preview.attr('src', ev.target.result);
                reader.readAsDataURL(file);

                $('#deleteProfilePictureFlag').remove();
                $removeBtn.show();
            });

            $removeBtn.on('click', function () {
                if (!confirm('Remove your profile picture?')) return;

                $fileInput.val('');
                $preview.attr('src', defaultSrc);

                if ($('#deleteProfilePictureFlag').length === 0) {
                    $('<input>').attr({
                        type: 'hidden',
                        id: 'deleteProfilePictureFlag',
                        name: 'deleteProfilePicture',
                        value: 'true'
                    }).appendTo('form');
                }
                $(this).hide();
            });

            $fileInput.on('click', function () {
                if ($('#deleteProfilePictureFlag').length) {
                    $('#deleteProfilePictureFlag').remove();
                    $removeBtn.show();
                }
            });
        });
    </script>
</body>
</html>