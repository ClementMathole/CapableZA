@model List<Capableza.Web.Models.Qualification>
@{
    Layout = null;
    ViewData["Title"] = "My Qualifications";
    string employeeUid = ViewBag.EmployeeUid ?? "";
    bool isAdminViewing = ViewBag.IsAdminViewing ?? false;
    bool isComplete = ViewBag.IsProfileComplete ?? false;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Capableza</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body { background-color: #f8f9fa;}
        .card { border: none; border-radius: 0.75rem; box-shadow: 0 .125rem .25rem rgba(0,0,0,.075); }
        .card-header { background-color: #f8f9fa; border-bottom: 1px solid #dee2e6; font-weight: 600; color: #495057;}
        .table thead th { font-weight: 600; color: #495057; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px; background-color: #f8f9fa; border-bottom-width: 1px;}
        .table tbody td { vertical-align: middle; font-size: 0.9rem; }
        .badge { font-size: 0.75rem; padding: 0.3em 0.6em; }
        .btn-primary-teal { background-color: #0F6F84; border-color: #0F6F84; color: white; }
        .btn-primary-teal:hover { background-color: #0B5B6D; border-color: #0B5B6D; }
        .btn-xs { padding: 0.15rem 0.5rem; font-size: 0.75rem; line-height: 1.4; }
        .form-label-sm { font-size: 0.8rem; margin-bottom: 0.2rem; font-weight: 500;}
        .form-control-sm, .form-select-sm { font-size: 0.85rem; padding: 0.3rem 0.6rem; }
        .modal-header { background-color: #f8f9fa; border-bottom-color: #dee2e6;}
        .modal-title { font-size: 1.1rem; font-weight: 600; color: #343a40;}
    </style>
</head>
<body>

<div class="container mt-4 mb-5">
     @if (TempData["SuccessMessage"] != null) {
        <div class="alert alert-success alert-dismissible fade show" role="alert">@TempData["SuccessMessage"]<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>
     }
     @if (TempData["ErrorMessage"] != null) {
          <div class="alert alert-danger alert-dismissible fade show" role="alert">@TempData["ErrorMessage"]<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>
     }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewData["Title"]</h1>
        <div>
            <button type="button" class="btn btn-primary-teal btn-sm me-2" data-bs-toggle="modal" data-bs-target="#addQualModal">
                <i class="fa fa-plus me-1"></i> Add New Qualification
            </button>
            <a asp-action="Dashboard" class="btn btn-sm btn-outline-secondary">
                 <i class="fa fa-arrow-left me-1"></i> Back to Dashboard
             </a>
        </div>
    </div>


    @if (!Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body text-center text-muted py-5">
                 <i class="fa fa-folder-open fa-3x mb-3 text-secondary"></i>
                <p>You haven't added any qualifications yet.</p>
                <button type="button" class="btn btn-primary-teal btn-sm mt-2" data-bs-toggle="modal" data-bs-target="#addQualModal">
                    Add Your First Qualification
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
             <div class="card-header bg-light border-0 py-2">
                 <span class="text-muted small">Your Qualifications List</span>
             </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 25%;">Title</th>
                            <th style="width: 25%;">Institute</th>
                            <th style="width: 10%;" class="text-center">Year</th>
                            <th style="width: 15%;">Type</th>
                            <th style="width: 10%;">Status</th>
                            <th style="width: 15%;" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="qual-row-@item.Id">
                                <td class="fw-medium">@item.Title</td>
                                <td>@item.Institute</td>
                                <td class="text-center">@item.YearObtained</td>
                                <td>@item.Type</td>
                                <td>
                                    <span class="badge @(item.Status == "Verified" ? "bg-success" : (item.Status == "Rejected" ? "bg-danger" : "bg-warning text-dark")) rounded-pill">
                                        @item.Status
                                    </span>
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-xs btn-outline-secondary btn-edit-qual me-1"
                                            data-id="@item.Id" data-title="@item.Title" data-institute="@item.Institute"
                                            data-year="@item.YearObtained" data-type="@item.Type" data-serial="@item.SerialNumber"
                                            data-bs-toggle="modal" data-bs-target="#addQualModal" title="Edit">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                    <button class="btn btn-xs btn-outline-danger btn-delete-qual" data-id="@item.Id" title="Delete">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <div class="modal fade" id="addQualModal" tabindex="-1" aria-labelledby="addQualModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addQualModalLabel">Add Qualification</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="qualForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="qualEmployeeId" value="@employeeUid" />
                        <input type="hidden" id="qualId" value="" />
                         <div id="modal-validation-summary" class="text-danger small mb-2 d-none"></div>

                        <div class="mb-3">
                            <label for="qualTitle" class="form-label form-label-sm">Title</label>
                            <input type="text" class="form-control form-control-sm" id="qualTitle" required>
                            <div class="invalid-feedback">Please enter the qualification title.</div>
                        </div>
                        <div class="mb-3">
                            <label for="qualInstitute" class="form-label form-label-sm">Institute</label>
                            <input type="text" class="form-control form-control-sm" id="qualInstitute" required>
                             <div class="invalid-feedback">Please enter the institute name.</div>
                        </div>
                         <div class="row g-2">
                            <div class="col-md-6 mb-3">
                                <label for="qualYear" class="form-label form-label-sm">Year Obtained</label>
                                <input type="number" class="form-control form-control-sm" id="qualYear" required min="1950" max="@DateTime.Now.Year">
                                <div class="invalid-feedback">Please enter a valid year.</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="qualType" class="form-label form-label-sm">Type</label>
                                <select class="form-select form-select-sm" id="qualType" required>
                                    <option value="">-- Select Type --</option>
                                    <option>Certificate</option>
                                    <option>Diploma</option>
                                    <option>Degree</option>
                                    <option>Other</option>
                                </select>
                                 <div class="invalid-feedback">Please select a type.</div>
                            </div>
                         </div>
                        <div class="mb-3">
                            <label for="qualSerial" class="form-label form-label-sm">Serial Number (Optional)</label>
                            <input type="text" class="form-control form-control-sm" id="qualSerial">
                        </div>
                            <div class="mb-3">
                                <label for="documentFile" class="form-label form-label-sm">Document (Optional)</label>
                                <input type="file" class="form-control form-control-sm" id="documentFile" name="documentFile" accept=".pdf,.jpg,.jpeg,.png">
                                <small class="form-text text-muted">Max file size 2MB.</small>
                                <div id="currentDocumentLink" class="mt-2 small"></div>
                            </div>
                        @* <div class="mb-3">
                            <label for="qualDocument" class="form-label form-label-sm">Document (Optional)</label>
                            <input type="file" class="form-control form-control-sm" id="qualDocument" name="qualDocument" accept=".pdf,.jpg,.jpeg,.png">
                            <small class="form-text text-muted">Max file size 2MB.</small>
                        </div> *@
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-sm btn-primary-teal" id="saveQualButton">
                        <span class="spinner-border spinner-border-sm me-1 d-none" role="status" aria-hidden="true"></span>
                        Save Qualification
                    </button>
                </div>
            </div>
        </div>
    </div>

</div>


<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<partial name="_ValidationScriptsPartial" />
<script>
        $(document).ready(function () {
            const addQualModalEl = document.getElementById('addQualModal');
            const addQualModal = new bootstrap.Modal(addQualModalEl);
            const form = $('#qualForm');
            const saveButton = $('#saveQualButton');
            const spinner = saveButton.find('.spinner-border');
            const validationSummary = $('#modal-validation-summary');
            const currentDocLink = $('#currentDocumentLink');
            const modalTitle = $('#addQualModalLabel');

            addQualModalEl.addEventListener('show.bs.modal', function (event) {
                const button = $(event.relatedTarget);
                const isEdit = button.hasClass('btn-edit-qual');
                const formElement = form[0];

                formElement.reset(); 
                form.removeClass('was-validated');
                form.find('.is-invalid').removeClass('is-invalid');
                validationSummary.addClass('d-none').text('');
                $('#qualId').val('');
                spinner.addClass('d-none');
                saveButton.prop('disabled', false);
                currentDocLink.html('');

                if (isEdit) {
                    modalTitle.text('Edit Qualification');
                    saveButton.text('Update Qualification');
                    $('#qualId').val(button.data('id'));
                    $('#qualTitle').val(button.data('title'));
                    $('#qualInstitute').val(button.data('institute'));
                    $('#qualYear').val(button.data('year'));
                    $('#qualType').val(button.data('type'));
                    $('#qualSerial').val(button.data('serial'));

                    const docUrl = button.data('doc-url');
                    if (docUrl) {
                        currentDocLink.html(`Current: <a href="${docUrl}" target="_blank" class="fw-medium">View Document</a><br><small>Uploading a new file will replace this one.</small>`);
                    }
                } else {
                    modalTitle.text('Add Qualification');
                    saveButton.text('Save Qualification'); 
                }
            });

            saveButton.on('click', function () {
                form.find('.is-invalid').removeClass('is-invalid');
                validationSummary.addClass('d-none').text('');
                form.removeClass('was-validated');

                var fileInput = $('#documentFile')[0];
                if (fileInput.files.length > 0) {
                    const file = fileInput.files[0];
                    const maxSize = 2 * 1024 * 1024;
                    if (file.size > maxSize) {
                        validationSummary.text('Error: File must be 2 MB or less.').removeClass('d-none');
                        $('#documentFile').addClass('is-invalid');
                        return; 
                    }
                }

                if (!form[0].checkValidity()) {
                    form.addClass('was-validated');
                    var firstInvalid = form.find(':invalid').first();
                    if (firstInvalid.length > 0) {
                        var label = firstInvalid.closest('.mb-3').find('label').text();
                        validationSummary.text(`Error: Please check the '${label}' field.`).removeClass('d-none');
                    } else {
                        validationSummary.text('Error: Please fill out all required fields.').removeClass('d-none');
                    }
                    return;
                }

                const qualId = $('#qualId').val();
                const isEditing = qualId !== "";
                const url = isEditing ? `@Url.Action("UpdateQualification", "Employee")` : `@Url.Action("AddQualification", "Employee")`;

                var formData = new FormData();
                formData.append("Id", qualId || null);
                formData.append("Title", $('#qualTitle').val());
                formData.append("Institute", $('#qualInstitute').val());
                formData.append("YearObtained", $('#qualYear').val());
                formData.append("Type", $('#qualType').val());
                formData.append("SerialNumber", $('#qualSerial').val());

                if (fileInput.files.length > 0) {
                    formData.append("documentFile", fileInput.files[0]);
                }

                spinner.removeClass('d-none');
                saveButton.prop('disabled', true);
                saveButton.text(isEditing ? 'Updating...' : 'Saving...');

                $.ajax({
                    url: url,
                    type: 'POST',
                    headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        if (response.success) {
                            addQualModal.hide();
                            alert(response.message);
                            location.reload();
                        } else {
                            validationSummary.text('Error: ' + (response.message || 'Could not save.')).removeClass('d-none');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Save Qual Error:", xhr.responseText);
                        let errorMsg = 'An error occurred. Please try again.';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMsg = xhr.responseJSON.message;
                        } else if (xhr.responseText) {
                            try {
                                const errors = JSON.parse(xhr.responseText).errors;
                                if (errors) {
                                    errorMsg = Object.values(errors)[0][0];
                                }
                            } catch (e) {}
                        }
                        validationSummary.text(errorMsg).removeClass('d-none');
                    },
                    complete: function () {
                        spinner.addClass('d-none');
                        saveButton.prop('disabled', false);
                        saveButton.text(isEditing ? 'Update Qualification' : 'Save Qualification');
                    }
                });
            });

            $('.btn-delete-qual').on('click', function () {
                if (!confirm('Are you sure you want to delete this qualification? This cannot be undone.')) return;

                const button = $(this);
                const qualId = button.data('id');
                const row = $(`#qual-row-${qualId}`);
                const deleteUrl = `@Url.Action("DeleteQualification", "Employee")/${qualId}`;
                const deleteIcon = button.find('i');

                button.prop('disabled', true);
                deleteIcon.removeClass('fa-trash').addClass('fa-spinner fa-spin');

                $.ajax({
                    url: deleteUrl, type: 'POST',
                    headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                    success: function (response) {
                        if (response.success) {
                            row.fadeOut(400, function () {
                                $(this).remove();
                                if ($('table tbody tr').length === 0) {
                                    location.reload();
                                }
                            });
                            alert(response.message);
                        } else {
                            alert('Error: ' + (response.message || 'Could not delete.'));
                            button.prop('disabled', false);
                            deleteIcon.removeClass('fa-spinner fa-spin').addClass('fa-trash');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Delete Qual Error:", xhr.responseText);
                        alert('An error occurred while deleting.');
                        button.prop('disabled', false);
                        deleteIcon.removeClass('fa-spinner fa-spin').addClass('fa-trash');
                    }
                });
            });
        });
</script>
</body>
</html>