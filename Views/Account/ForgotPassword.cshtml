@model Capableza.Web.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .forgotpw-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        min-height: calc(100vh - 180px);
        padding-top: 2rem;
        padding-bottom: 2rem;
    }

    .forgotpw-card {
        border: none;
        border-radius: 0.75rem;
        box-shadow: 0 0.3rem 1rem rgba(0,0,0,.08);
    }

    .forgotpw-header {
        text-align: center;
        margin-bottom: 1.5rem;
        color: #0F6F84;
    }

        .forgotpw-header i {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .forgotpw-header h1 {
            font-weight: 600;
            font-size: 1.4rem;
            margin-bottom: 0.25rem;
        }

        .forgotpw-header p {
            font-size: 0.9rem;
            color: #6c757d;
        }

    .form-floating > .form-control {
        height: calc(3.5rem + 2px);
        line-height: 1.25;
    }

    .form-floating > label {
        padding: 1rem 0.75rem;
        font-size: 0.9rem;
        color: #6c757d;
    }

    .form-control:focus {
        border-color: #0F6F84;
        box-shadow: 0 0 0 0.2rem rgba(15, 111, 132, 0.25);
    }

    .btn-reset {
        background-color: #0F6F84;
        border-color: #0F6F84;
        color: white;
        padding: 0.75rem;
        font-weight: 500;
        font-size: 1rem;
    }

        .btn-reset:hover {
            background-color: #0B5B6D;
            border-color: #0B5B6D;
        }

    .back-link {
        color: #0F6F84;
        font-size: 0.85rem;
    }

        .back-link:hover {
            color: #0B5B6D;
        }

    .text-danger {
        font-size: 0.8rem;
    }
</style>

<div class="forgotpw-container">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-9">

            <div class="card forgotpw-card">
                <div class="card-body p-4 p-md-5">

                    <div class="forgotpw-header">
                        <i class="fa fa-lock-open mb-2"></i>
                        <h1>Forgot Your Password?</h1>
                        <p>Enter your email address below, and we'll send you a link to reset your password.</p>
                    </div>

                    <form method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger mb-3 small"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Email" class="form-label"></label>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-reset">
                                <i class="fa fa-paper-plane me-2"></i>Send Reset Link
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-action="Login" class="back-link text-decoration-none">
                            <i class="fa fa-arrow-left me-1"></i> Back to Login
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}