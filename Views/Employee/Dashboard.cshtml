@model Capableza.Web.Models.EmployeeProfile
@using Capableza.Web.Models
@{
    Layout = null;
    ViewData["Title"] = "My Dashboard";
    var upcomingTraining = ViewBag.UpcomingTraining as AssignedTraining;
    var recentActivities = ViewBag.RecentActivities as List<AuditLog> ?? new List<AuditLog>();
    bool isAdminViewing = ViewBag.IsAdminViewing ?? false;
    bool isComplete = Model.ProfileCompletionStatus >= 99.9;
    string disabledClass = isComplete ? "" : "enabled";
    string progressColorClass = Model.ProfileCompletionStatus >= 100 ? "bg-success" : (Model.ProfileCompletionStatus >= 50 ? "bg-primary-teal" : "bg-warning");
    string initials = string.Join("", Model.FullName.Split(' ').Where(s => !string.IsNullOrEmpty(s)).Select(s => s[0])).ToUpper();
    if (initials.Length > 2) initials = initials.Substring(0, 2);
    else if (initials.Length == 0) initials = "??";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Capableza</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .dashboard-banner {
            background-color: #0F6F84;
            color: white;
            border-radius: 0.5rem;
            padding: 1rem 1.5rem;
        }

            .dashboard-banner h5 {
                font-weight: 600;
            }

            .dashboard-banner p {
                font-size: 0.9rem;
                color: rgba(255,255,255,0.8);
            }

            .dashboard-banner .logout-icon {
                font-size: 1.5rem;
                color: rgba(255,255,255,0.8);
                text-decoration: none;
            }

                .dashboard-banner .logout-icon:hover {
                    color: white;
                }

        .card {
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.075);
            margin-bottom: 1.5rem;
        }

        .card-body {
            padding: 1.25rem;
        }

        .card-title {
            font-size: 0.9rem;
            font-weight: 600;
            color: #6c757d;
            margin-bottom: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .progress-bar {
            background-color: #0F6F84;
        }

        .progress {
            height: 0.75rem;
            background-color: #e9ecef;
            border-radius: 0.375rem;
        }

        .completion-text {
            font-size: 0.8rem;
            font-weight: 500;
            color: #495057;
        }

        .info-box {
            border: 1px solid #ced4da;
            background-color: #f8f9fa;
            border-radius: 0.375rem;
            padding: 0.75rem 1rem;
            margin-bottom: 1rem;
        }

        .info-label {
            font-size: 0.8rem;
            color: #6c757d;
            margin-bottom: 0.25rem;
        }

        .info-value {
            font-size: 1rem;
            color: #212529;
            font-weight: 500;
            min-height: 24px;
        }
        .btn-manage {
            border-color: #ced4da;
            color: #495057;
            font-weight: 500;
            padding: 0.75rem;
        }

            .btn-manage.disabled {
                background-color: #e9ecef;
                border-color: #e9ecef;
                color: #adb5bd;
                pointer-events: none;
            }

        .btn-primary-teal {
            background-color: #0F6F84;
            border-color: #0F6F84;
            color: white;
            padding: 0.75rem;
            font-weight: 500;
        }

            .btn-primary-teal:hover {
                background-color: #0B5B6D;
                border-color: #0B5B6D;
            }

        .form-switch .form-check-input {
            width: 3em;
            height: 1.5em;
            background-color: #adb5bd;
        }

            .form-switch .form-check-input:checked {
                background-color: #0F6F84;
                border-color: #0F6F84;
            }

        .support-textarea {
            min-height: 80px;
        }

        .activity-item {
            padding-bottom: 0.75rem;
            margin-bottom: 0.75rem;
            border-bottom: 1px dashed #dee2e6;
        }

            .activity-item:last-child {
                border-bottom: none;
                margin-bottom: 0;
                padding-bottom: 0;
            }

        .activity-action {
            font-weight: 500;
        }

        .activity-time {
            font-size: 0.75rem;
            color: #6c757d;
        }

        .avatar-banner-initials {
            background-color: rgba(255,255,255,0.2);
            color: #ffffff;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            font-size: 1rem;
            font-weight: 600;
        }
    </style>
</head>
<body>

    <div class="container py-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">@TempData["SuccessMessage"]<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">@TempData["ErrorMessage"]<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>
        }

        <div class="container py-4">
            <div class="dashboard-banner d-flex align-items-center mb-4">

                @if (!string.IsNullOrWhiteSpace(Model.ProfilePicture))
                {
                    <img src="@Url.Action("ViewProfilePicture", "Employee")" alt="Profile" style="width: 50px; height: 50px; border-radius: 50px; margin-right: 20px;">
                }
                else
                {
                    <div class="avatar-banner-initials me-3"> @initials </div>
                }

                <div class="flex-grow-1">
                    <h5>Welcome, @Model.FirstName!</h5>
                    <p class="mb-0">You've successfully logged into the employee dashboard. We're glad to have you here today.</p>
                </div>
                <form asp-controller="Account" asp-action="Logout" method="post" id="logoutFormDash" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link logout-icon p-0" title="Logout">
                        <i class="fa fa-sign-out-alt"></i>
                    </button>
                </form>
            </div>

        </div>

        <div class="row">

            <div class="col-lg-7">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="card-title">Profile Completion</h6>
                                <div class="progress my-2">
                                    <div class="progress-bar @progressColorClass" role="progressbar" style="width: @(Model.ProfileCompletionStatus.ToString("F0"))%;"
                                         aria-valuenow="@Model.ProfileCompletionStatus" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <p class="completion-text mb-0">@Model.ProfileCompletionStatus.ToString("F0")% Complete</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="card-title">Upcoming Training</h6>
                                @if (upcomingTraining != null)
                                {
                                    <p class="info-value mb-1">@upcomingTraining.Title</p>
                                    <p class="info-label mb-0">Date: @upcomingTraining.StartDate</p>
                                }
                                else
                                {
                                    <p class="text-muted small mt-2">No upcoming training scheduled.</p>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="info-box">
                                            <p class="info-label">Name</p>
                                            <p class="info-value">@Model.FullName</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="info-box">
                                            <p class="info-label">Role</p>
                                            <p class="info-value">@(string.IsNullOrEmpty(Model.JobTitle) ? "Not Set" : Model.JobTitle)</p>
                                        </div>
                                    </div>
                                    <div class="col-12 d-flex justify-content-end align-items-center mt-2">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" role="switch" id="darkThemeSwitch" >
                                            <label class="form-check-label small text-muted" for="darkThemeSwitch">Dark Theme</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-title">Support Channel</h6>
                                <form asp-action="SendSupportMessage" method="post">
                                    @Html.AntiForgeryToken()
                                    <div class="mb-2">
                                        <textarea name="supportMessage" class="form-control support-textarea" placeholder="Message to Admin..." required></textarea>
                                    </div>
                                    <div class="text-end">
                                        <button type="submit" class="btn btn-primary-teal">Send Message</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="d-grid gap-3">
                    <a asp-action="Profile" class="btn btn-primary-teal">Update Profile</a>
                    <a asp-action="Qualifications" class="btn btn-manage @disabledClass">Manage Qualifications</a>
                    <a asp-action="Trainings" class="btn btn-manage @disabledClass">Manage Trainings</a>
                    <a asp-action="Skills" class="btn btn-manage @disabledClass">Manage Skills</a>
                </div>
                <div class="card mt-4">
                    <div class="card-body">
                        <h6 class="card-title">Recent Activities</h6>
                        @if (recentActivities.Any())
                        {
                            foreach (var activity in recentActivities)
                            {
                                <div class="activity-item">
                                    <p class="activity-action mb-0">@activity.ActionTarget</p>
                                    <p class="activity-time mb-0">@activity.TimestampDateTime.ToString("yyyy-MM-dd HH:mm")</p>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted small">No recent activities recorded.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.getElementById('darkThemeSwitch').addEventListener('change', function(event) {
             if (event.target.checked) {
                 document.body.classList.add('dark-mode');
                 console.log('Dark theme enabled');
             } else {
                 document.body.classList.remove('dark-mode');
                 console.log('Dark theme disabled');
             }
         });
    </script>

</body>
</html>