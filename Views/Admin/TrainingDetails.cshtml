@model Capableza.Web.Models.EmployeeTraining
@{
    ViewData["Title"] = "Training Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string employeeName = ViewBag.EmployeeName as string ?? "Employee";
    string employeeId = ViewBag.EmployeeId as string ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-3 pt-1 pb-2 border-bottom">
    <div>
        <h1 class="h2">@ViewData["Title"]</h1>
        <br />
        <h4>@ViewBag.EmployeeName</h4>
    </div>
    <a asp-action="EmployeeDetails" asp-route-id="@employeeId" class="btn btn-sm btn-outline-secondary">
        <i class="fa fa-arrow-left me-1"></i> Back to Employee
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header py-3">
        <h5 class="mb-0 card-title">@Model.TrainingName</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Training Name:</dt>
            <dd class="col-sm-9">@Model.TrainingName</dd>

            <dt class="col-sm-3">Provider:</dt>
            <dd class="col-sm-9">@Model.Provider</dd>

            <dt class="col-sm-3">Start Date:</dt>
            <dd class="col-sm-9">@Model.StartDate</dd>

            <dt class="col-sm-3">End Date:</dt>
            <dd class="col-sm-9">@Model.EndDate</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9"><span class="badge @(Model.Status == "completed" ? "bg-success" : (Model.Status == "in-progress" ? "bg-info text-dark" : "bg-secondary")) rounded-pill text-capitalize">@Model.Status</span></dd>
        </dl>
    </div>
</div>