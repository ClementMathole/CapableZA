@{
    ViewData["Title"] = "Reset Link Sent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .confirmation-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 180px);
        text-align: center;
        padding: 2rem;
    }

    .confirmation-icon {
        color: #198754;
        font-size: 3.5rem;
        margin-bottom: 1.5rem;
    }

    .confirmation-container h1 {
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #343a40;
    }

    .confirmation-container p {
        color: #6c757d;
        max-width: 500px;
        margin-bottom: 1.5rem;
    }

    .btn-login-confirm {
        background-color: #0F6F84;
        border-color: #0F6F84;
        color: white;
        padding: 0.6rem 1.5rem;
    }

        .btn-login-confirm:hover {
            background-color: #0B5B6D;
            border-color: #0B5B6D;
            color: white;
        }
</style>

<div class="confirmation-container">
    <div class="confirmation-icon">
        <i class="fa fa-check-circle"></i>
    </div>
    <h1>@ViewData["Title"]</h1>
    <p>
            If an account exists for the email address provided, we have sent instructions to reset your password. Please check your inbox and spam folder.
    </p>
    <p>
        <a asp-action="Login" class="btn btn-login-confirm">
            <i class="fa fa-arrow-left me-1"></i> Back to Log in
        </a>
    </p>
</div>

@section Scripts {}